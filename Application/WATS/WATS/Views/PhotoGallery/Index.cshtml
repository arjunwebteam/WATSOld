    <div class="dilogbox">
        <div class="dialog-title">
            <span class="pull-right dialogclose"><a style="color: #ffffff" onclick="$('#PhotoCategoryView').dialog('close');">x</a></span>View Photo Category 
        </div>
        <div class="dialog-content">
            <div class="container-fluid">
