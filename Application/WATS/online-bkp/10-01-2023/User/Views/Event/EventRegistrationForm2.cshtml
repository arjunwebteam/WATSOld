        if ($('#Description').val() == "") { $('#Description').focus().addClass("validate"); $('#spanDescription').show().html('Please enter Description.<span>&nbsp;</span><i>&nbsp;</i><abbr onclick="closeValidation(this);">&nbsp;</abbr>'); return false; } else { $('#spanDescription').hide().html(''); $('#Description').focus().removeClass("validate"); }
        if ($('#MediaTrack').val() == "") { $('#MediaTrack').focus().addClass("validate"); $('#spanMediaTrack').show().html('Please choose MediaTrack.<span>&nbsp;</span><i>&nbsp;</i><abbr onclick="closeValidation(this);">&nbsp;</abbr>'); return false; } else { $('#spanMediaTrack').hide().html(''); $('#MediaTrack').focus().removeClass("validate"); }
        if ($('#NumberOfParticipants').val() == "") { $('#NumberOfParticipants').focus().addClass("validate"); $('#spanNumberOfParticipants').show().html('Please enter NumberOfParticipants.<span>&nbsp;</span><i>&nbsp;</i><abbr onclick="closeValidation(this);">&nbsp;</abbr>'); return false; } else { $('#spanNumberOfParticipants').hide().html(''); $('#NumberOfParticipants').focus().removeClass("validate"); }
        if ($('#Age').val() == "") { $('#Age').focus().addClass("validate"); $('#spanAge').show().html('Please enter Age.<span>&nbsp;</span><i>&nbsp;</i><abbr onclick="closeValidation(this);">&nbsp;</abbr>'); return false; } else { $('#spanAge').hide().html(''); $('#Age').focus().removeClass("validate"); }

        if ($('#ParticipantsFullNames').val() == "") { $('#ParticipantsFullNames').focus().addClass("validate"); $('#spanParticipantsFullNames').show().html('Please enter Participants FullNames.<span>&nbsp;</span><i>&nbsp;</i><abbr onclick="closeValidation(this);">&nbsp;</abbr>'); return false; } else { $('#spanParticipantsFullNames').hide().html(''); $('#ParticipantsFullNames').focus().removeClass("validate"); }
        if ($('#ProgramDuration').val() == "") { $('#ProgramDuration').focus().addClass("validate"); $('#spanProgramDuration').show().html('Please enter ProgramDuration.<span>&nbsp;</span><i>&nbsp;</i><abbr onclick="closeValidation(this);">&nbsp;</abbr>'); return false; } else { $('#spanProgramDuration').hide().html(''); $('#ProgramDuration').focus().removeClass("validate"); }

        if ($('#ChoreographerName').val() == "") { $('#ChoreographerName').focus().addClass("validate"); $('#spanChoreographerName').show().html('Please enter ChoreographerName.<span>&nbsp;</span><i>&nbsp;</i><abbr onclick="closeValidation(this);">&nbsp;</abbr>'); return false; } else { $('#spanChoreographerName').hide().html(''); $('#ChoreographerName').focus().removeClass("validate"); }

        if ($('#ContactPhoneNumber').val() == "") { $('#ContactPhoneNumber').focus().addClass("validate"); $('#spanContactPhoneNumber').show().html('Please enter Contact PhoneNo.<span>&nbsp;</span><i>&nbsp;</i><abbr onclick="closeValidation(this);">&nbsp;</abbr>'); return false; } else { $('#spanContactPhoneNumber').hide().html(''); $('#ContactPhoneNumber').focus().removeClass("validate"); }

        if ($.trim($('#ContactEmail').val()) == '') { $('#ContactEmail').focus().addClass('redborder'); $('#spanContactEmail').show().html('Email Id Required <span>&nbsp;</span><i>&nbsp;</i><abbr onclick="closeValidation(this);">&nbsp;</abbr>'); return false; } else { $('#spanContactEmail').hide().html(''); $('#ContactEmail').removeClass("redborder"); }
        if (!Common.CheckEmail($.trim($('#ContactEmail').val()))) { $('#spanContactEmail').show().html('Please enter valid email address.<span>&nbsp;</span><i>&nbsp;</i><abbr onclick="closeValidation(this);">&nbsp;</abbr>'); $('#ContactEmail').focus().addClass("red-border"); return false; } else { $('#spanContactEmail').html(''); }

        if ($('#SchoolName').val() == "") { $('#SchoolName').focus().addClass("validate"); $('#spanSchoolName').show().html('Please enter School Name.<span>&nbsp;</span><i>&nbsp;</i><abbr onclick="closeValidation(this);">&nbsp;</abbr>'); return false; } else { $('#spanSchoolName').hide().html(''); $('#SchoolName').focus().removeClass("validate"); }

        if ($('#Terms').prop("checked") == true) {
            $('#spanTerms').hide().html(''); $('#spanTerms').html('');
        } else { $('#spanTerms').show().html('Required.<span>&nbsp;</span><i>&nbsp;</i><abbr onclick="closeValidation(this);">&nbsp;</abbr>'); $('#Terms').focus().addClass("red-border"); return false; }

        if ($.trim($('#txtCaptcha').val()) == '') { $('#txtCaptcha').focus().addClass('redborder'); $('#spantxtCaptcha').show().html('Captcha Required <span>&nbsp;</span><i>&nbsp;</i><abbr onclick="closeValidation(this);">&nbsp;</abbr>'); return false; } else { $('#spantxtCaptcha').hide().html(''); $('#txtCaptcha').removeClass('redborder'); }
        //if ($('#txtCaptcha').val() == '') { $('#txtCaptcha').focus().addClass("validate"); return false; } else { $('#txtCaptcha').focus().removeClass("validate"); }
        var str = Common.GetCaptcha();

        if ($('#txtCaptcha').val() != str) { $('#txtCaptcha').val(''); document.getElementsByName('txtCaptcha')[0].placeholder = 'You entered wrong captcha.'; $('#txtCaptcha').focus().addClass("validate"); return false; } else { $('#txtCaptcha').focus().removeClass("validate"); }

        return true;
    }

    function ResetValidateClass() {
        $('#ItemName').removeClass("validate");
        $('#ItemCategory').removeClass("validate");
        $('#ItemDuration').removeClass("validate");
        $('#ItemDescription').removeClass("validate");
        $('#FirstName').removeClass("validate");
        $('#LastName').removeClass("validate");
        $('#EmailId').removeClass("validate");
        $('#Mobile').removeClass("validate");
        $('#City').removeClass("validate");
        $('#State').removeClass("validate");
        $('#txtCaptcha').removeClass("validate");

    }
    function CreloadCaptcha() {
        document.getElementById('CUcaptcha').src = document.getElementById('CUcaptcha').src + '/';
    }

    var specialKeys = new Array();
    specialKeys.push(8); //Backspace
    specialKeys.push(9); //Tab
    specialKeys.push(32); //Space
    specialKeys.push(46); //Delete
    specialKeys.push(36); //Home
    specialKeys.push(35); //End
    specialKeys.push(37); //Left
    specialKeys.push(39); //Right


    function onlyAlphabets(e, t) {
        try {
            if (window.event) {
                var charCode = window.event.keyCode;
            }
            else if (e) {
                var charCode = e.which;
            }
            else { return true; }
            if ((charCode == 32) || (charCode > 64 && charCode < 91) || (charCode > 96 && charCode < 123) || (specialKeys.indexOf(e.keyCode) != -1 && e.charCode != e.keyCode))
                return true;
            else
                return false;
        }
        catch (err) {
            alert(err.Description);
        }
    }
    function phonenochange(event) {
        if (event.keyCode == 8 || event.keyCode == 46) {
        }
        else {
            var ph = $('#ContactPhoneNumber').val();
            if (ph.length == 3) { $('#ContactPhoneNumber').val(ph + '-'); }
            if (ph.length == 7) { $('#ContactPhoneNumber').val(ph + '-'); }
        }
    }
    function closeValidation(field) {
        $(field).parent().hide();
    }

    function closeValidationOnClick(field) {
        $(field).next('span').hide();
    }
</script>

