    function Validate() {

        if ($('#ProgramType').val() == "") { $('#ProgramType').focus().addClass("validate"); $('#spanProgramType').show().html('Please enter Program Type.<span>&nbsp;</span><i>&nbsp;</i><abbr onclick="closeValidation(this);">&nbsp;</abbr>'); return false; } else { $('#spanProgramType').hide().html(''); $('#ProgramType').focus().removeClass("validate"); }
