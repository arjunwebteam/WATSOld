                        </div>      
                    }
                                    </div>
                                <div id="load@(item.MemberId)" class="hide">
                                                    <img alt="load" class="" src="Content/images/loader.gif" />
                                                </div>
}
else
{var isactive = "";
	 if (item.IsApproved == true)
                            {
                                isactive = "Active";
                                
                            }
                            else
                            {
                                isactive = "Disabled";
                                
                            }
@isactive
}
                </td>
                            <td>
