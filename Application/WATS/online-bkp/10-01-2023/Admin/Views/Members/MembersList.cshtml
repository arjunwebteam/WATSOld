<th width="10%">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (lstMembers.Count != 0)
                    {
                        Int64 i = 1;
                        foreach (var item in lstMembers)
                        { 
                        <tr>
 @if (userRole.Contains("SuperAdmin"))
                 {
                             <td><input type="checkbox" name="checkbox" id="checkbox-@i" value= "@{@item.MemberId}" /></td>
}
                            <td>@item.RId</td>
