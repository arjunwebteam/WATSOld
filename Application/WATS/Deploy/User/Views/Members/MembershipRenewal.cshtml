    function getamount(membershipid) {
        var amt = '@amt';
        var str = "";
        $.ajax({
            url: '@Url.Action("GetAmount", "Members")',
            type: 'POST',
            data: { MembershipTypeId: membershipid },
            datatype: "JSON",
            success: function (result) {
