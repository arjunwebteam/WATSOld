                    //    var d = new Date();
                    //    d.setMonth((d.getMonth()) + objMembershipType.Validity);
                    //    $('#ExpiryDate').val(d.toDateString("MM/dd/yyyy"));
                    //} 
                }
                else {
                    alert(result.data);
                }
            }
        });
    }
